{
	"allowJs": true,
	"checkJs": true,
	"compilerOptions": {
		"noEmit": true,
		"target": "es6",
		"lib": ["es6"],
		"rootDir": "src",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
