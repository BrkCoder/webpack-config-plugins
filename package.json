{
    "name": "webpack-config-plugins",
    "version": "1.0.0",
    "private": true,
    "description": "Simplify webpack loader configuration",
    "main": "index.js",
    "scripts": {
        "install": "lerna bootstrap",
        "commit": "git-cz",
        "lint": "lint-staged",
        "pretest": "npm run lint",
        "test": "lerna run test",
        "prettier": "prettier ./packages/**/*.js ./packages/*/package.json"
    },
    "keywords": [
        "webpack"
    ],
    "license": "MIT",
    "devDependencies": {
        "commitizen": "2.10.1",
        "cz-conventional-changelog": "2.1.0",
        "eslint": "5.0.1",
        "husky": "0.14.3",
        "lerna": "2.11.0",
        "lint-staged": "7.2.0",
        "prettier": "1.13.6"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "pre-push": "npm test"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 100,
        "trailingComma": "es5"
    },
    "lint-staged": {
        "./packages/**/*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
